<div class="container p-4">
    <div class="row">
        {{#each medicos}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{nombre}}">
                        <h3 class="card-title text-uppercase">
                            {{nombre}}
                        </h3>
                    </a>
                    <p class="m-2">{{especialidad}}</p>
                    <a href="/admin/delete/medico/{{id}}" class="btn btn-danger">Eliminar médico</a>
                    <a href="/admin/edit/medico/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>

        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay médicos en la base de datos.</p>
                <a href="/admin/add-medico">Agregar un médico</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>