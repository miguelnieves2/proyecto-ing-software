    {{!-- Accion de colores botones preguntas frecuentes --}}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const likeButtons = document.querySelectorAll('.btn-like');
            const dislikeButtons = document.querySelectorAll('.btn-dislike');

            likeButtons.forEach(likeButton => {
                likeButton.addEventListener('click', function () {
                    // Activa el botón de like y desactiva el de dislike correspondiente
                    this.classList.remove('btn-gray');
                    this.classList.add('active');
                    this.parentNode.querySelector('.btn-dislike').classList.add('btn-gray');
                    this.parentNode.querySelector('.btn-dislike').classList.remove('active');
                });
            });

            dislikeButtons.forEach(dislikeButton => {
                dislikeButton.addEventListener('click', function () {
                    // Activa el botón de dislike y desactiva el de like correspondiente
                    this.classList.remove('btn-gray');
                    this.classList.add('active');
                    this.parentNode.querySelector('.btn-like').classList.add('btn-gray');
                    this.parentNode.querySelector('.btn-like').classList.remove('active');
                });
            });
        });
    </script>


